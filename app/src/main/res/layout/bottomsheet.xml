<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:alpha=".90"
        android:background="@drawable/bg_bottom_sheet_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_bottom_sheet"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="15dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/salsa_regular"
                android:text="Wallet Balance"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/numberOfCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa_regular"
                android:text="100"
                android:textColor="#109CCF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa_regular"
                android:text=" coins"
                android:textColor="#109CCF"
                android:textSize="18sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="7dp"
            app:dividerColor="#AFAFAF"
            app:dividerThickness="0.8dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/suggestion_coins_bg"
                android:fontFamily="@font/salsa_regular"
                android:paddingVertical="5dp"
                android:text="100"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/suggestion_coins_bg"
                android:fontFamily="@font/salsa_regular"
                android:paddingVertical="5dp"
                android:text="200"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/suggestion_coins_bg"
                android:fontFamily="@font/salsa_regular"
                android:paddingVertical="5dp"
                android:text="300"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/suggestion_coins_bg"
                android:fontFamily="@font/salsa_regular"
                android:paddingVertical="5dp"
                android:text="500"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/suggestion_coins_bg"
                android:fontFamily="@font/salsa_regular"
                android:paddingVertical="5dp"
                android:text="1000"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:dividerColor="#AFAFAF"
            app:dividerThickness="0.8dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/salsa_regular"
                android:text="Enter your coustom amount"
                android:textColor="@color/black"
                android:textSize="15.5sp" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:maxLines="1"
                android:lines="1"
                android:textColor="@color/white"
                android:background="@drawable/bottomsheet_textfield_bg" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_weight="2"
            android:layout_marginHorizontal="15dp">

            <Button
                android:id="@+id/btnAddMoney"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/outline_button_bg"
                android:fontFamily="@font/salsa_regular"
                android:text="ADD MONEY"
                android:textSize="16sp" />

            <View
                android:layout_width="18dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/filled_button_bg"
                android:fontFamily="@font/salsa_regular"
                android:text="SEND"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
