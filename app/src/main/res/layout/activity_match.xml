<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activities.MatchActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp120"
            android:fontFamily="@font/dancing_script"
            android:gravity="center"
            android:text="@string/match"
            android:textColor="@color/white"
            android:textSize="@dimen/dp50" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            tools:text="lucky like you too" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp15">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_blank_user_profile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="@dimen/dp96"
                android:background="@drawable/ic_blank_user_profile" />
        </FrameLayout>

        <TextView
            android:id="@+id/send_msg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp50"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/btn_gradient"
            android:gravity="center"
            android:padding="@dimen/dp15"
            android:text="@string/send_message_txt"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/keep_swiping_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp50"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/strock_btn"
            android:gravity="center"
            android:padding="@dimen/dp15"
            android:text="@string/keep_swiping"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>