<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.HomeFragment">

        <include
            android:id="@+id/filter_layout"
            layout="@layout/layout_filter"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/peoples_empty_data_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp200"
                android:background="@drawable/rounded_circle"
                android:backgroundTint="@color/transparant_background"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100"
                    android:src="@drawable/ic_blank_user_profile"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/dp5" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_empty_people_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp50"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center"
                android:text="@string/dashboard_peoples_loading_msg"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_setting_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/dp25"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/rounded_rectangle_btn_gredent"
                android:gravity="center"
                android:padding="@dimen/size_15"
                android:text="@string/profile_setting"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/peoples_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/actionBarHeader"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">

                <ImageView
                    android:id="@+id/drawerIcon"
                    android:layout_width="@dimen/dp29"
                    android:layout_height="@dimen/dp29"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_blank_user_profile" />

                <ImageView
                    android:id="@+id/filter_icon"
                    android:layout_width="@dimen/dp29"
                    android:layout_height="@dimen/dp29"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_filter" />

            </RelativeLayout>

            <com.yuyakaido.android.cardstackview.CardStackView
                android:id="@+id/card_stack_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_container"
                android:layout_below="@+id/actionBarHeader"
                android:layout_marginTop="@dimen/dp10"
                android:clipToPadding="false"
                android:padding="4dp" />

            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:clipChildren="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <RelativeLayout
                    android:id="@+id/undo_button"
                    android:layout_width="@dimen/dp52"
                    android:layout_height="@dimen/dp52"
                    android:layout_marginLeft="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp52"
                        android:layout_height="@dimen/dp52"
                        android:src="@drawable/ic_rewind_border" />

                    <ImageView
                        android:layout_width="@dimen/dp52"
                        android:layout_height="@dimen/dp52"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:src="@drawable/ic_rewind" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/skip_button"
                    android:layout_width="@dimen/dp75"
                    android:layout_height="@dimen/dp75"
                    android:layout_marginLeft="@dimen/dp20"
                    android:background="@drawable/like_btn_background"
                    android:elevation="@dimen/dp8">

                    <ImageView
                        android:layout_width="@dimen/dp72"
                        android:layout_height="@dimen/dp72"
                        android:padding="@dimen/dp8"
                        android:src="@drawable/ic_baseline_close_24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/like_button"
                    android:layout_width="@dimen/dp62"
                    android:layout_height="@dimen/dp62"
                    android:layout_marginLeft="@dimen/dp20"
                    android:elevation="@dimen/dp8">

                    <ImageView
                        android:layout_width="@dimen/dp62"
                        android:layout_height="@dimen/dp62"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_like_new" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/super_like_button"
                    android:layout_width="@dimen/dp52"
                    android:layout_height="@dimen/dp52"
                    android:layout_marginLeft="@dimen/dp20">

                    <ImageView
                        android:layout_width="@dimen/dp57"
                        android:layout_height="@dimen/dp57"
                        android:src="@drawable/ic_super_like_rounded_border" />

                    <ImageView
                        android:layout_width="@dimen/dp52"
                        android:layout_height="@dimen/dp52"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:src="@drawable/ic_super_like" />

                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>