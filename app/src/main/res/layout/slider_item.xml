<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:layout_marginHorizontal="@dimen/dp30"
        android:layout_marginVertical="@dimen/dp30"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/make_your_profile" />

    <!--<ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp30"
        android:src="@drawable/img1" />-->

    <TextView
        android:id="@+id/into_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp25"
        android:layout_marginTop="@dimen/size_39"
        android:gravity="center"
        android:text="@string/title1"
        android:textAllCaps="false"
        android:textColor="@color/sky_blue"
        android:textSize="@dimen/dp25"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center"
        android:padding="@dimen/size_20"
        android:text="@string/des"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/size_15" />
</LinearLayout>