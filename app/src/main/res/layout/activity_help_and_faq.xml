<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activities.HelpAndFaqActivity">

        <include
            android:id="@+id/header"
            layout="@layout/common_header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feedBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/grtadient_background"
                android:gravity="center"
                android:paddingVertical="@dimen/dp50"
                android:paddingHorizontal="@dimen/dp40"
                android:text="@string/txt_feedback"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grtadient_background"
                android:gravity="center"
                android:paddingVertical="@dimen/dp50"
                android:paddingHorizontal="@dimen/dp40"
                android:text="@string/txt_complaint"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="@dimen/sp15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp25"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/terms"
                android:layout_width="152dp"
                android:layout_height="132dp"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/grtadient_background"
                android:gravity="center"
                android:text="@string/txt_term_and_policy"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/track_complain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grtadient_background"
                android:gravity="center"
                android:paddingHorizontal="@dimen/sp15"
                android:paddingVertical="@dimen/dp57"
                android:textAllCaps="true"
                android:text="@string/txt_track_complaint"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp25"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grtadient_background"
                android:gravity="center"
                android:padding="@dimen/dp50"
                android:textAllCaps="true"
                android:text="@string/txt_app_info"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />
        </LinearLayout>
    </LinearLayout>
</layout>
