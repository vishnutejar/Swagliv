<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chats"
            type="com.app.swagliv.model.chat.pojo.UserChats" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp5"
        android:layout_marginVertical="@dimen/dp5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp15"
            tools:background="@drawable/person_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="@{chats.userName}"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                tools:text="@string/jenny" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp66"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{chats.lastMessage}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"
                    tools:text="hello" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@{chats.timeSpan}"
                    android:textColor="@color/white"
                    tools:text="11" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</layout>

