<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp10"
    android:background="@android:color/transparent"
    app:cardCornerRadius="@dimen/dp20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/voilate_100"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp30"
        android:paddingVertical="@dimen/dp25">

        <TextView
            android:id="@+id/txt_show_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_me_txt"
            android:textColor="@color/pink1"
            android:textSize="@dimen/dp20"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/men_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp10"
            android:text="Men"
            android:textColor="@color/white"
            android:textSize="@dimen/dp20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/grey"
            android:paddingVertical="@dimen/dp10" />

        <TextView
            android:id="@+id/women_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp10"
            android:text="Women"
            android:textColor="@color/white"
            android:textSize="@dimen/dp20" />

    </LinearLayout>

</androidx.cardview.widget.CardView>